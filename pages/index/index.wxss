/**index.wxss**/
.container{
  height: 100%;
  width: 100%;
  display: block;
}
swiper{
  height: 200px;
  width: 100%;
}
swiper image{
  display: block;
  height: 100%;
  width: 100%;
}
.blogList{
  padding: 5px;
  background: #ffffff;
  box-sizing: border-box;
}
.simBlog{
  height: 60px;
  width: 100%;
  background: #f5f5f5;
  margin-bottom: 5px;
}
.simBlog .preImageBox{
  display: block;
  width: 60px;
  height: 60px;
  background: red;
  float: left;
}
.simBlog .preImageBox .preImage{
  display: block;
  height: 100%;
  width: 100%;
}
.simBlog .contentBox{
  height: 60px;
  margin-left: 65px;
}
.simBlog .contentBox .title{
  display: block;
  font-size: 30rpx;
  color:#000;
  margin-bottom:5px;
}
.simBlog .contentBox .content{
  display: block;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color:#333;
}
